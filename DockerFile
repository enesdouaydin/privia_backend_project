FROM golang:1.20-alpine AS builder

# Gerekli paketleri yükle
RUN apk add --no-cache gcc musl-dev

# Çalışma dizinini ayarla
WORKDIR /app

# Go modül dosyasını kopyala ve bağımlılıkları indir
COPY go.mod ./
RUN go mod download

# Tüm kaynak kodları kopyala
COPY . .

# Uygulamayı derle
RUN go build -o todoapp .

# Son imaj için yeni bir aşama
FROM alpine:latest

# CA sertifikalarını yükle
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Derlenmiş uygulamayı kopyala
COPY --from=builder /app/todoapp .

# Railway'in atadığı portu dinlemek için
ENV PORT=8080

# Uygulamayı çalıştır
CMD ["./todoapp"]